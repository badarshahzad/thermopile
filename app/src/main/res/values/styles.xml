<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/dark_gray</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScheduleDay" parent="TextAppearance.AppCompat.Caption">
        <item name="android:background">@drawable/layerlist_background_schedule_day</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="ScheduleDayHours" parent="TextAppearance.AppCompat.Body1">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/layerlist_background_schedule</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="TextDate" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextTime" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextHour" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextMinute" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/worksans_extralight</item>
    </style>

    <style name="TextDataUnitPrimary" parent="TextAppearance.AppCompat.Display2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TextDataUnitSecondary" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TextDataSecondary" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextDataPrimary" parent="TextAppearance.AppCompat.Display2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="ItemTextHour" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="ItemTextMinute" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_extralight</item>
    </style>

    <style name="ItemDay" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="ItemThresholdTemperature" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

</resources>
