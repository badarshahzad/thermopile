<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/dark_gray</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorAccent">@color/vanilla</item>
    </style>

    <style name="ModeDaysTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ScheduleDay" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_weight">0.13</item>
        <item name="android:background">@drawable/layerlist_background_schedule_day</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
