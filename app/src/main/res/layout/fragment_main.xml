<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_gray"
        app:contentInsetEnd="16dp"
        app:contentInsetStart="8dp">

        <TextView
            android:id="@+id/textview_date"
            style="@style/TextDate"/>

        <TextView
            android:id="@+id/textview_clock"
            style="@style/TextTime"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_hours"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerview_hours"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_temperature"
                style="@style/TextTemperature"/>

            <TextView
                android:id="@+id/textview_temperature_unit"
                style="@style/TextUnitTemperature"
                android:text="Â°C"/>

        </LinearLayout>

        <com.knobtviker.thermopile.presentation.views.CircularSeekBar
            android:id="@+id/seekbar_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:circle_progress_color="@color/transparent"
            app:circle_stroke_width="24dp"
            app:circle_x_radius="190dp"
            app:circle_y_radius="190dp"
            app:end_angle="45"
            app:maintain_equal_circle="true"
            app:max="100"
            app:min="0"
            app:move_outside_circle="false"
            app:pointer_alpha_ontouch="255"
            app:pointer_color="@color/light_gray"
            app:pointer_halo_border_width="0dp"
            app:pointer_halo_color="@color/light_gray"
            app:pointer_radius="12dp"
            app:progress="99"
            app:start_angle="135"
            app:use_custom_radii="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/seekbar_temperature"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:padding="8dp"
                    android:layout_width="?attr/listPreferredItemHeightSmall"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    app:srcCompat="@drawable/ic_humidity"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_humidity"
                        style="@style/TextHumidity"/>

                    <TextView
                        android:id="@+id/textview_humidity_unit"
                        style="@style/TextUnitHumidity"
                        android:text="%"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/seekbar_temperature"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:padding="8dp"
                    android:layout_width="?attr/listPreferredItemHeightSmall"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    app:srcCompat="@drawable/ic_pressure"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_pressure"
                        style="@style/TextPressure"/>

                    <TextView
                        android:id="@+id/textview_pressure_unit"
                        style="@style/TextUnitPressure"
                        android:text="hPa"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingactionbutton_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                app:backgroundTint="@color/light_gray"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_arrow_down"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingactionbutton_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                app:backgroundTint="@color/light_gray"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_arrow_up"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>